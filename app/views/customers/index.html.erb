
<table>
  <thead>
    <th>Email</th>
    <th>Points</th>
    <th></th>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.email %></td>
        <td><%= customer.current_points %></td>
        <td colspan=2>
          <%= link_to "View Customer", customer_path(id: customer.id) %>
          <%= link_to "Record wash", new_customer_wash_path(customer_id: customer.id) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
