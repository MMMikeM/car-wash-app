<% @user.errors.full_messages.each do |message| %>
  <p><%= message %></p>
<% end %>

<%= form_with model: @user, local:true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit button_text %>
<% end %>
